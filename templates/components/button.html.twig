<{{ tagName }}     
    class="btn {{ type }} {{ text }} {{ size }} {% if disabled and tag == 'link' %}disabled{% endif %}"
    {% if tag == 'link' %}
        role="button"
        href="{{ href }}" 
        {% if disabled %}aria-disabled="true"{% endif %}
    {% else %}
        type="{{ tagType }}" 
        {{ disabled }}
    {% endif %}
    {% if tag in ['input', 'submit', 'reset'] %}
        >
    {% else %}
        >{{ content | raw }}
    {% endif %}
</{{ tagName }}>