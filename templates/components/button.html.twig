<{{ tagButton }}     
    class="btn {{ type }} {{ text }}"
    {% if tag == 'link' %}
        role="button"
        href="{{ href }}" 
    {% endif %}
    {% if tag != 'link' %}
        type="{{ tag }}" 
    {% endif %}
    {% if tag in ['input', 'submit', 'reset'] %}
        value="{{ content }}"
    {% endif %}
>
{% if tag in ['link', 'button'] %}
{{ content }}
{% endif %}
</{{ tagButton }}>

