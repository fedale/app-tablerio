{% extends 'base.html.twig' %}


{% block body%}
<h1>{{ component }}</h1>

<h3>Examples</h3>
  {% for type in ['primary', 'secondary', 'success', 'danger', 'warning', 'info', 'light', 'dark', 'link']  %}
  {{ component('button', { 
        'type': type,
        'content': type|capitalize,
        'text': type in ['warning', 'info', 'light'] ? 'dark' : type == 'link' ? '' : 'light'
      }) 
  }}
  {% endfor  %}

<h3>Button tags</h3>
  {% for tag in ['link', 'button', 'input', 'submit', 'reset']  %}
  {{ component('button', { 
        'tag': tag,
        'content': tag|capitalize,
        'text': 'light'
      }) 
  }}
  {% endfor  %}
<hr>
<a class="btn btn-primary" href="#" role="button">Link</a>
<button class="btn btn-primary" type="submit">Button</button>
<input class="btn btn-primary" type="button" value="Input">
<input class="btn btn-primary" type="submit" value="Submit">
<input class="btn btn-primary" type="reset" value="Reset">

{% endblock %}
